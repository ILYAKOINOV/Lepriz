<h4>Post details</h4>
<br />
<p>
	<%= @row['content'] %>
	<br />
	<br />
	Added at <%= @row['create_date'] %>
</p>
<br />
<h5>Comments:<h5>
<br/>
<% @comments.each do |comment| %>
<p>
	<%= comment['content'] %>
	<br />
	<span style="font-size: 75%; color: #999"> Added at <%= comment['create_date'] %></span>
</p>
<hr />
<% end %>

<p>	
	<form action="/details/<%= @row['id'] %>" method="POST" role="form">
		<div class="form-floating">
		<textarea name="content" class="form-control" placeholder="Type comment text here" id="floatingTextarea"></textarea>
		<label for="floatingTextarea"></label>
		</div>

		<br />
		<button type="submit" class="btn btn-primary">Add comment</button>
	</form>
</p>	